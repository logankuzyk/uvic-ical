{
  "short_name": "UVic iCal",
  "name": "UVic Timetable to iCal",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png",
    "256": "logo512.png",
    "512": "logo512.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "UVic iCal"
  },
  "permissions": ["tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://*.uvic.ca/*"],
      "js": ["./static/js/content.js"]
    }
  ]
}
